<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.neaghfoz.component.user.role.model">
    <class name="Role" table="tb_role">
        <id name="roleId" column="role_id" type="string">
            <generator class="uuid"/>
        </id>
        <property name="roleName" column="role_name" type="string"/>

        <set name="userSet" table="tb_user_role_link" inverse="false" >
            <key column="role_id"/>
            <many-to-many class="com.neaghfoz.component.user.user.model.User" column="user_id"/>
        </set>

        <!-- tb_role_per_link 这张表是由 tb_role(model:Role) 来进行维护 -->
        <set name="permissionSet" table="tb_role_per_link" inverse="false">
            <key column="role_id"/>
            <many-to-many class="com.neaghfoz.component.user.permission.model.Permission" column="permission_id"/>
        </set>
    </class>

</hibernate-mapping>