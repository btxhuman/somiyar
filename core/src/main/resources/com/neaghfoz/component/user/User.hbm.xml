<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.neaghfoz.component.user.user.model">
    <class name="User" table="tb_user">
        <id name="userId" column="user_id">
            <generator class="uuid"/>
        </id>
        <property name="userName" column="user_name" type="string" unique="true"/>
        <property name="sex" column="sex" type="int"/>
        <property name="nickName" column="nick_name" type="string"/>
        <property name="email" column="email" type="string"/>
        <property name="phone" column="phone" type="string"/>
        <property name="status" column="status" type="int"/>
        <property name="createTime" column="create_time" type="timestamp"/>

        <!-- tb_user_role_link 这张表是由 tb_user(model:User) 来进行维护 -->
        <set name="roleSet" table="tb_user_role_link" inverse="false">
            <key column="user_id"/>
            <many-to-many class="com.neaghfoz.component.user.role.model.Role" column="role_id"/>
        </set>
    </class>

</hibernate-mapping>